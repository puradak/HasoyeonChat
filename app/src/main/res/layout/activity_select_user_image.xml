<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Select_userImage">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용할 이미지를 선택하세요."
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071" />

    <ImageButton
        android:id="@+id/tube_1"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:background="@drawable/btn_userimage_round"
        android:clipToOutline="true"
        android:onClick="imageClick"
        android:scaleType="fitCenter"
        android:src="@drawable/tube_1"
        app:layout_constraintBottom_toTopOf="@+id/btn_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toEndOf="@+id/neo_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.951" />

    <ImageButton
        android:id="@+id/neo_1"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:background="@drawable/btn_userimage_round"
        android:clipToOutline="true"
        android:onClick="imageClick"
        android:scaleType="fitCenter"
        android:src="@drawable/neo_1"
        app:layout_constraintBottom_toTopOf="@+id/btn_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.137"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.953" />

    <ImageButton
        android:id="@+id/apeach_2"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:background="@drawable/btn_userimage_round"
        android:clipToOutline="true"
        android:onClick="imageClick"
        android:scaleType="fitCenter"
        android:src="@drawable/apeach_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toEndOf="@+id/apeach_1"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.041" />

    <ImageButton
        android:id="@+id/prodo_2"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:background="@drawable/btn_userimage_round"
        android:clipToOutline="true"
        android:onClick="imageClick"
        android:scaleType="fitCenter"
        android:src="@drawable/prodo_2"
        app:layout_constraintBottom_toTopOf="@+id/tube_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toEndOf="@+id/prodo_1"
        app:layout_constraintTop_toBottomOf="@+id/apeach_1"
        app:layout_constraintVertical_bias="0.56" />

    <ImageButton
        android:id="@+id/apeach_1"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:background="@drawable/btn_userimage_round"
        android:clipToOutline="true"
        android:onClick="imageClick"
        android:scaleType="fitCenter"
        android:src="@drawable/apeach_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.137"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.041" />

    <ImageButton
        android:id="@+id/prodo_1"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:background="@drawable/btn_userimage_round"
        android:clipToOutline="true"
        android:onClick="imageClick"
        android:scaleType="fitCenter"
        android:src="@drawable/prodo_1"
        app:layout_constraintBottom_toTopOf="@+id/neo_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.137"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/apeach_1"
        app:layout_constraintVertical_bias="0.55" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:onClick="cancel_clicked"
        android:text="취소"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.973" />

</androidx.constraintlayout.widget.ConstraintLayout>